rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper Functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function isValidUser() {
      return isAuthenticated() && 
             request.resource.data.userId == request.auth.uid;
    }
    
    // Training Sessions
    match /trainingSessions/{sessionId} {
      // Users can only read their own sessions
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Users can only create sessions with their own userId
      allow create: if isValidUser() &&
                       request.resource.data.keys().hasAll(['userId', 'date', 'day']) &&
                       request.resource.data.day >= 1 &&
                       request.resource.data.day <= 28;
      
      // Users can only update/delete their own sessions
      allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Progress Entries
    match /progress/{progressId} {
      // Users can only read their own progress
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // Users can only create progress with their own userId
      allow create: if isValidUser() &&
                       request.resource.data.keys().hasAll(['userId', 'currentDay', 'totalDays']) &&
                       request.resource.data.currentDay >= 1 &&
                       request.resource.data.currentDay <= 28 &&
                       request.resource.data.totalDays == 28;
      
      // Users can only update/delete their own progress
      allow update, delete: if isAuthenticated() && 
                               resource.data.userId == request.auth.uid;
    }
    
    // Users Collection (optional - for storing user profiles)
    match /users/{userId} {
      // Users can only read and write their own profile
      allow read, write: if isOwner(userId);
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
